<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:color="@color/green"/>
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:color="@color/green"/>

    <!-- Focused states (such as when focused with a d-pad or mouse hover) -->
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:color="@color/green"/>
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:color="@color/green"/>

    <!-- STATES WHEN BUTTON IS PRESSED -->
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="false" android:color="@color/green"/>
    <item android:state_focused="false" android:state_pressed="true" android:state_selected="true" android:color="@color/green"/>
    <item android:state_focused="true" android:state_pressed="true" android:state_selected="false" android:color="@color/green"/>
    <item android:state_focused="true" android:state_pressed="true" android:state_selected="true" android:color="@color/green"/>

</selector>